doctype html
html(ng-app="app", ng-csp="")
  head
    meta(charset='UTF-8')
    title Rola History
    link(rel='stylesheet', href='./bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='./angular/angular-csp.css')
    link(rel='stylesheet', href='./style.css')
    script(src='./angular/angular.js')
    script(src='./angular-route/angular-route.js')
    script(src='./angular-animate/angular-animate.js')
    script(src='./app.js')
  body(ng-controller="AppCtrl", ng-class="{locked: locked}")
    include includes/header
    section.container(ng-view="")
    .loading
      ul.loading-anime
        li
        li
        li

    script(type="text/ng-template", id="/recent.html")
      include templates/recent
    script(type="text/ng-template", id="/date.html")
      include templates/date
    script(type="text/ng-template", id="/search.html")
      include templates/search
    script(type="text/ng-template", id="/option.html")
      include templates/option
